#  done
#done

#for b in {0..6}
#let "b=b*36+16"
#let "c=a+b"
#echo -en "$c"
#done
#done

# for a in {0..23}
#    do let "b=a+16"
#    echo -e " $b "
#done

#for a in {0..6}
#    do let "b=a*36+16"
#    echo -en " $b"
#done
#done

# (16 52 88 124 160 196 232) x 16

# 16-231
#for a in {1..15}
#    do echo -e "$a "
#for b in {0..10}
#do let "c=$a+16+10*$b"
#echo -en "$c "
#done
#done

echo -e "\n################################################################################"
echo "# Note: both were tested on the terminal: xterm-256color"
echo '# Check with $TERM'
echo -e "################################################################################\n"
