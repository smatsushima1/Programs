#! /bin/bash

echo -e "\n################################################################################"
echo "# ANSI colors"
echo -e "################################################################################\n"

echo '  \033[0;x   \033[1;x    x = *m value'

for a in {30..37}
  do echo -e "    \033[0;${a}m${a}m        \033[1;${a}m${a}m"
done

echo -e "\033[0m"
echo  '  No color = \033[0;0m'

echo -e "\n################################################################################"
echo "# 256 colors"
echo -e "################################################################################\n"

echo '  \033[38;5;x    x = *m value'
echo ""

# 0-15
for a in {0..15}
  do echo -en "  \033[38;5;${a}m${a}m"
done

echo -e "  \033[m\n"

# 16-51
for a in {16..51}
  do echo -e "  \033[38;5;${a}m${a}m"
done

echo -e "  \033[m"
echo  '  No color = \033[m'

#for a in {0..6}
