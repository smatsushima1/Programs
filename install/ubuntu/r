#!/bin/bash

################################################################################
# check for dpkg directory
################################################################################

if [ ! -d ~/dpkg ]
then mkdir ~/dpkg
fi

################################################################################
# dependencies
################################################################################

apt-get install -y libjpeg62

################################################################################
# r
################################################################################

apt-get install -y r-base
wget https://download1.rstudio.org/rstudio-xenial-1.1.383-amd64.deb -P ~/dpkg
dpkg -i ~/dpkg/rstudio*
